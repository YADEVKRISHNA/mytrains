    </flow>
    <flow name="get:\users\(userId)\subscriptions\(subscriptionId):userSubscriptionSapiConfig">
		<flow-ref doc:name="Get Subscription By Subscription Id" doc:id="17f729c0-9ec0-40e6-965e-3be8ab55ca70" name="get-subscription-by-subscription-id"/>
    </flow>
    <flow name="get:\users\(userId):userSubscriptionSapiConfig">
