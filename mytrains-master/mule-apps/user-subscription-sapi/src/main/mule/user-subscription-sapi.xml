    </flow>
    <flow name="post:\users\(userId)\subscriptions\(subscriptionId)\alerts:application\json:userSubscriptionSapiConfig">
		<flow-ref doc:name="Insert Alert By Subscription Id" doc:id="57bfa26e-ab9c-42f2-a158-1437421349e3" name="insert-alert-by-subscription-id"/>
    </flow>
    <flow name="post:\users\(userId)\subscriptions:application\json:userSubscriptionSapiConfig">
		<flow-ref doc:name="Add Subscription By User Id" doc:id="7e683aab-7fcd-405b-8c81-116a4909d95e" name="add-subscription-by-user-id"/>
    </flow>
    <flow name="post:\users:application\json:userSubscriptionSapiConfig">
		<flow-ref doc:name="Add User Details" doc:id="f3c9b583-4fe9-4942-96d5-9864430fc98a" name="add-user-details"/>
    </flow>
</mule>
